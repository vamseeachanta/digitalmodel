{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://digitalmodel.io/schemas/generic_equipment.schema.json",
  "title": "Generic Equipment Data Schema",
  "description": "Generic JSON schema for validating equipment data",
  "type": "object",
  "properties": {
    "ID": {
      "type": ["string", "number"],
      "description": "Unique equipment identifier"
    },
    "Name": {
      "type": "string",
      "description": "Equipment name or designation"
    },
    "Manufacturer": {
      "type": "string",
      "description": "Manufacturer name"
    },
    "Model": {
      "type": "string",
      "description": "Model number or designation"
    },
    "Category": {
      "type": "string",
      "description": "Equipment category"
    },
    "Rating": {
      "type": "number",
      "description": "Primary rating (capacity, load, etc.)",
      "minimum": 0
    },
    "Units": {
      "type": "string",
      "description": "Units for rating",
      "examples": ["tons", "kN", "lbs", "kW", "HP"]
    },
    "Weight": {
      "type": "number",
      "description": "Equipment weight",
      "minimum": 0
    },
    "Weight_Units": {
      "type": "string",
      "description": "Weight units",
      "examples": ["kg", "lbs", "tons"]
    },
    "Standard": {
      "type": "string",
      "description": "Applicable engineering standard"
    },
    "Certification": {
      "type": "string",
      "description": "Certification or approval"
    }
  },
  "required": ["Name"],
  "additionalProperties": true
}
