{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://digitalmodel.io/schemas/masterlinks.schema.json",
  "title": "Master Links Data Schema",
  "description": "JSON schema for validating master link component data",
  "type": "object",
  "properties": {
    "Size": {
      "type": "string",
      "description": "Master link size designation",
      "examples": ["1/2", "5/8", "3/4", "7/8", "1"]
    },
    "WLL": {
      "type": "number",
      "description": "Working Load Limit in tons",
      "minimum": 0
    },
    "Inside_Length": {
      "type": "number",
      "description": "Inside length in inches",
      "minimum": 0
    },
    "Inside_Width": {
      "type": "number",
      "description": "Inside width in inches",
      "minimum": 0
    },
    "Weight": {
      "type": "number",
      "description": "Weight in lbs",
      "minimum": 0
    },
    "Material": {
      "type": "string",
      "description": "Material specification"
    },
    "Type": {
      "type": "string",
      "description": "Link type",
      "enum": ["Oblong", "Pear", "Round"]
    }
  },
  "required": ["Size", "WLL", "Type"],
  "additionalProperties": true
}
