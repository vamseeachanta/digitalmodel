# Database Configuration
DB_PASSWORD=your-secure-password-here
DATABASE_URL=postgresql+asyncpg://orcaflex:your-secure-password-here@localhost:5432/orcaflex_dashboard

# Redis Configuration
REDIS_URL=redis://localhost:6379

# API Configuration
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
ENVIRONMENT=development
DEBUG=true

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Frontend Configuration
API_URL=http://localhost:8000
WS_URL=ws://localhost:8000

# File Monitoring
WATCH_DIRECTORY=/data/orcaflex/results
WATCH_PATTERNS=dm_*.csv,*.sim

# Performance Settings
MAX_WORKERS=4
CACHE_TTL=3600
MAX_UPLOAD_SIZE=1073741824

# Export Settings
EXPORT_DIRECTORY=/data/exports
MAX_EXPORT_ROWS=1000000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Email Notifications (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=notifications@example.com
SMTP_PASSWORD=email-password-here
NOTIFICATION_FROM=orcaflex-dashboard@example.com
NOTIFICATION_TO=engineering-team@example.com