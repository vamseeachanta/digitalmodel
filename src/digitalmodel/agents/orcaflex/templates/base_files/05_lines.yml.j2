# OrcaFlex Line Definitions
# Generated by OrcaFlex Agent
# Project: {{ project_name }}
# Date: {{ generation_date }}

LineType:
  - Name: MooringChain
    OD: {{ line_diameter }}
    ID: 0.0
    MassPerUnitLength: {{ line_mass_per_length }}
    EI: 0.0
    EA: 1.0e9
    GJ: 0.0
    CategoryType: General
    Drag:
      NormalDragLiftDiameter: {{ line_diameter }}
      AxialDragLiftDiameter: {{ line_diameter }}
      NormalDragCoefficient: 2.4
      AxialDragCoefficient: 1.15
      NormalAddedMassCoefficient: 1.0
      AxialAddedMassCoefficient: 0.0

Line:
  {% for i in range(1, num_mooring_lines + 1) -%}
  - Name: Mooring{{ i }}
    LineType: MooringChain
    Length: {{ line_length }}

    # End A - Vessel connection
    EndAConnection: Vessel1
    EndAConnectionPoint: Fairlead{{ i }}

    # End B - Seabed anchor
    EndBConnection: Fixed
    EndBAnchorPosition:
      X: {{ line_length * (1 if i <= num_mooring_lines / 2 else -1) }}
      Y: {{ line_length * (1 if (i - 1) % (num_mooring_lines / 2) < num_mooring_lines / 4 else -1) }}
      Z: {{ -water_depth }}

    # Line discretization
    NumberOfSegments: 100
    TargetSegmentLength: ~

  {% endfor %}
