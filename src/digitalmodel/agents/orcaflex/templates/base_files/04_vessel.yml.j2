# OrcaFlex Vessel Configuration
# Generated by OrcaFlex Agent
# Project: {{ project_name }}
# Vessel: {{ vessel_type }}
# Date: {{ generation_date }}

Vessel:
  - Name: Vessel1
    VesselType:
      Name: {{ vessel_type }}
      Length: {{ vessel_length }}
      Beam: {{ vessel_beam }}
      Draft: {{ vessel_draft }}
      Displacement: {{ vessel_displacement }}

      # Hydrodynamic data
      RAOs: ~{{ rao_file }}
      AddedMassAndDamping:
        Method: FrequencyDependentAddedMassAndDamping
        DataFile: ~{{ amd_file }}

      # Inertia properties
      MomentOfInertiaTensor:
        - [1.0e9, 0.0, 0.0]
        - [0.0, 2.0e10, 0.0]
        - [0.0, 0.0, 2.0e10]

      # OCIMF wind coefficients
      OCIMFSuperstructureProfile: UserSpecified
      OCIMFSuperstructureData:
        FrontalWindArea: 500.0
        LateralWindArea: 2000.0
        Cx: 0.8
        Cy: 0.9
        Cn: 0.1

      # Current coefficients
      CurrentDragLiftFormulation: UserSpecified
      CurrentDragCoefficients:
        Axial: 0.8
        Transverse: 1.2

    # Initial position
    InitialPosition:
      X: 0.0
      Y: 0.0
      Z: 0.0

    # Connection points for mooring
    ConnectionPoints:
      {% for i in range(1, num_mooring_lines + 1) -%}
      - Name: Fairlead{{ i }}
        X: {{ (vessel_length / 2) * (-1 if i > num_mooring_lines / 2 else 1) }}
        Y: {{ (vessel_beam / 2) * (1 if (i - 1) % (num_mooring_lines / 2) < num_mooring_lines / 4 else -1) }}
        Z: {{ -vessel_draft }}
      {% endfor %}
