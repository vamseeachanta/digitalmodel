{
  "_template_info": {
    "name": "Pressure Vessel Stress Analysis Example",
    "description": "Example stress analysis for cylindrical pressure vessel under internal pressure and thermal loading"
  },

  "basename": "stress_analysis",
  "analysis_type": "von_mises_stress",

  "default": {
    "units": {
      "stress": "MPa",
      "force": "N",
      "length": "m",
      "pressure": "MPa",
      "temperature": "C"
    },
    "log_level": "INFO",
    "config": {
      "overwrite": {
        "output": true
      }
    }
  },

  "stress_components": [
    {
      "component_id": "PV001",
      "description": "Horizontal pressure vessel - process gas service",
      "component_type": "cylindrical_shell",

      "geometry": {
        "section_type": "circular_hollow",
        "outer_diameter": 2.000,
        "wall_thickness": 0.050,
        "length": 8.000,
        "inner_diameter": 1.900,
        "mean_radius": 0.975
      },

      "material": {
        "grade": "API_5L_X65",
        "yield_strength": 448,
        "ultimate_strength": 531,
        "elastic_modulus": 207000,
        "poisson_ratio": 0.30,
        "shear_modulus": 80000
      },

      "loading": {
        "internal_pressure": 10.0,
        "external_pressure": 0.1,
        "axial_force": 0,
        "bending_moment": {
          "Mx": 0,
          "My": 0
        },
        "temperature_gradient": {
          "inner_surface": 150,
          "outer_surface": 120,
          "average": 135
        }
      },

      "stress_state": {
        "hoop_stress": 195.0,
        "longitudinal_stress": 97.5,
        "radial_stress": -5.0,
        "thermal_stress": {
          "hoop": 15.0,
          "longitudinal": 15.0,
          "radial": 0.0
        }
      },

      "analysis_points": [
        {
          "point_id": "P1",
          "description": "Inner surface, maximum stress location",
          "coordinates": [0.0, 0.950, 0.0],
          "stress_type": "biaxial_pressure_thermal"
        },
        {
          "point_id": "P2",
          "description": "Outer surface",
          "coordinates": [0.0, 1.000, 0.0],
          "stress_type": "biaxial_thermal"
        }
      ]
    }
  ],

  "analysis_methods": {
    "stress_theories": {
      "von_mises": {
        "description": "Von Mises equivalent stress theory",
        "applicable_materials": ["ductile"],
        "safety_factor": 1.5
      }
    }
  },

  "load_combinations": {
    "ASME_VIII": {
      "design_condition": {
        "pressure": 1.0,
        "mechanical": 1.0,
        "thermal": 1.0,
        "description": "Normal operating conditions"
      }
    }
  },

  "stress_limits": {
    "ASME_VIII_Div_1": {
      "general_membrane": "S",
      "local_membrane": "1.5*S",
      "membrane_plus_bending": "1.5*S"
    }
  },

  "environmental_effects": {
    "temperature": {
      "range": [20, 200],
      "effects": ["thermal_expansion", "thermal_stress"]
    },
    "corrosion": {
      "environment": "process_gas",
      "allowance": 3.0
    }
  }
}