{
  "ai_assistant_permissions": {
    "can_modify_code": true,
    "can_create_files": true,
    "can_delete_files": false,
    "can_run_commands": true,
    "can_install_packages": false,
    "can_modify_git": true
  },
  "preferences": {
    "code_style": "black",
    "import_sorting": "isort",
    "linting": "ruff",
    "type_checking": "mypy",
    "testing_framework": "pytest",
    "package_manager": "uv"
  },
  "project_specific": {
    "domain": "offshore_engineering",
    "configuration_driven": true,
    "yaml_configs": "src/digitalmodel/base_configs/modules/",
    "specifications_location": "specs/",
    "follow_vertical_slice_architecture": true
  },
  "safety_constraints": {
    "require_tests": true,
    "require_lint_pass": true,
    "require_type_check": true,
    "no_external_api_calls_without_permission": true,
    "follow_specifications": true
  }
}