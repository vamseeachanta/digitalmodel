# digitalmodel Configuration Template
# Copy this file to .env and customize as needed
# Environment variables override default settings

# ============================================================================
# Paths
# ============================================================================

# Root directory for data files (default: ./data)
# DM_DATA_DIR=./data

# Root directory for generated reports (default: ./reports)
# DM_OUTPUT_DIR=./reports

# Root directory for log files (default: ./logs)
# DM_LOG_DIR=./logs

# Directory for cached results (default: ./cache)
# DM_CACHE_DIR=./cache

# ============================================================================
# Engineering Parameters
# ============================================================================

# Global safety factor for engineering calculations (default: 1.5, range: 1.0-5.0)
# DM_SAFETY_FACTOR=1.5

# Path to custom material property database (optional)
# DM_MATERIAL_DATABASE=/path/to/materials.db

# Path to custom S-N curve database (optional)
# DM_SN_CURVE_DATABASE=/path/to/sn_curves.db

# ============================================================================
# Analysis Settings
# ============================================================================

# Default analysis mode: deterministic or probabilistic (default: deterministic)
# DM_ANALYSIS_MODE=deterministic

# Maximum iterations for iterative solvers (default: 1000, range: 10-100000)
# DM_MAX_ITERATIONS=1000

# Convergence tolerance for iterative solvers (default: 1e-6, must be > 0)
# DM_CONVERGENCE_TOLERANCE=1e-6

# ============================================================================
# OrcaFlex Settings
# ============================================================================

# Number of parallel workers for OrcaFlex analysis (default: 30, range: 1-100)
# DM_ORCAFLEX_WORKERS=30

# Timeout in seconds for OrcaFlex license acquisition (default: 300, range: 10-3600)
# DM_ORCAFLEX_LICENSE_TIMEOUT=300

# ============================================================================
# Reporting Settings
# ============================================================================

# Default output format for reports: html, json, csv, or all (default: html)
# DM_REPORT_FORMAT=html

# Use interactive plots (Plotly) instead of static images (default: true)
# DM_INTERACTIVE_PLOTS=true

# Default theme for Plotly visualizations (default: plotly_white)
# Options: plotly, plotly_white, plotly_dark, ggplot2, seaborn
# DM_PLOT_THEME=plotly_white

# ============================================================================
# Performance Settings
# ============================================================================

# Enable result caching for expensive calculations (default: true)
# DM_ENABLE_CACHING=true

# Maximum memory usage in megabytes (default: 4096, range: 512-65536)
# DM_MAX_MEMORY_MB=4096

# ============================================================================
# Logging Settings
# ============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR, or CRITICAL (default: INFO)
# DM_LOG_LEVEL=INFO

# Log message format: standard, detailed, or json (default: standard)
# DM_LOG_FORMAT=standard

# ============================================================================
# Testing/Development Settings
# ============================================================================

# Runtime environment: development, testing, or production (default: production)
# DM_ENVIRONMENT=production

# Enable debug mode with verbose output (default: false)
# DM_DEBUG=false

# ============================================================================
# Usage Examples
# ============================================================================

# Example 1: Development Configuration
# DM_ENVIRONMENT=development
# DM_DEBUG=true
# DM_LOG_LEVEL=DEBUG
# DM_ENABLE_CACHING=false

# Example 2: Production Configuration
# DM_ENVIRONMENT=production
# DM_LOG_LEVEL=WARNING
# DM_ENABLE_CACHING=true
# DM_MAX_MEMORY_MB=8192

# Example 3: Testing Configuration
# DM_ENVIRONMENT=testing
# DM_DATA_DIR=./tests/fixtures
# DM_OUTPUT_DIR=./tests/outputs
# DM_ORCAFLEX_WORKERS=2

# Example 4: Custom Paths
# DM_DATA_DIR=/mnt/shared/digitalmodel/data
# DM_OUTPUT_DIR=/mnt/shared/digitalmodel/reports
# DM_LOG_DIR=/var/log/digitalmodel
# DM_CACHE_DIR=/tmp/digitalmodel/cache

# Example 5: High-Performance Configuration
# DM_ORCAFLEX_WORKERS=50
# DM_MAX_MEMORY_MB=16384
# DM_ENABLE_CACHING=true
# DM_MAX_ITERATIONS=10000
