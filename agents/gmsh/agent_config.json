{
  "name": "GMSH Agent",
  "version": "1.0.0",
  "description": "Specialized AI agent for finite element mesh generation and manipulation using GMSH",
  "author": "DigitalModel Team",
  "created": "2024-12-24",
  "capabilities": {
    "mesh_generation": {
      "1d": ["beam", "line", "curve"],
      "2d": ["triangle", "quadrilateral", "mixed"],
      "3d": ["tetrahedron", "hexahedron", "prism", "pyramid", "mixed"]
    },
    "geometry_formats": {
      "import": ["STEP", "IGES", "STL", "BREP", "GEO"],
      "export": ["MSH", "VTK", "CGNS", "MED", "INP", "STL"]
    },
    "quality_metrics": [
      "jacobian",
      "aspect_ratio",
      "skewness",
      "orthogonality",
      "volume_ratio"
    ],
    "optimization": {
      "methods": ["laplacian_smoothing", "adaptive_refinement", "remeshing"],
      "parallel": true,
      "max_iterations": 100
    }
  },
  "configuration": {
    "default_algorithm": "frontal-delaunay",
    "default_element_size": 1.0,
    "quality_thresholds": {
      "min_jacobian": 0.3,
      "max_aspect_ratio": 5.0,
      "max_skewness": 0.7
    },
    "performance": {
      "parallel_workers": 4,
      "chunk_size": 1000,
      "memory_limit_gb": 4
    },
    "logging": {
      "level": "INFO",
      "file": "gmsh_agent.log",
      "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
    }
  },
  "integrations": {
    "orcaflex": {
      "enabled": true,
      "panel_mesh": true,
      "mooring_discretization": true
    },
    "ansys": {
      "enabled": true,
      "formats": ["CDB", "INP"],
      "boundary_conditions": true
    },
    "openfoam": {
      "enabled": false,
      "formats": ["FOAM"]
    }
  },
  "workflows": {
    "batch_meshing": "workflows/batch_meshing.yml",
    "optimization": "workflows/optimization.yml",
    "quality_check": "workflows/quality_check.yml"
  },
  "templates": {
    "offshore_platform": "templates/offshore_platform.geo",
    "mooring_line": "templates/mooring_line.geo",
    "seabed_terrain": "templates/seabed_terrain.geo"
  }
}